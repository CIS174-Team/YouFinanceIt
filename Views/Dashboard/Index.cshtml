@* Views/Dashboard/Index.cshtml *@
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5 d-flex flex-column align-items-center justify-content-center" style="min-height: calc(100vh - 160px);">
    <h1 class="text-center mb-4 font-weight-bold text-dark">Welcome Back, @User.Identity?.Name!</h1>
    <p class="text-center text-muted mb-5 lead mx-auto" style="max-width: 48rem;">
        Your central hub for managing your finances. Choose an option below to get started.
    </p>

    <div class="row g-4 justify-content-center w-100" style="max-width: 48rem;">
        <div class="col-12 col-md-6">
            <a asp-controller="FinancialAccount" asp-action="Index"
               class="card h-100 shadow-sm text-decoration-none text-dark d-flex flex-column align-items-center justify-content-center p-4">
                <img src="~/images/dashboard/accounts.svg" alt="Accounts Icon"
                     class="rounded-circle border border-primary p-2 mb-3" style="width: 128px; height: 128px;">
                <h2 class="h4 font-weight-semibold mb-2">My Accounts</h2>
                <p class="text-muted text-center">View and manage all your financial accounts.</p>
            </a>
        </div>

        <div class="col-12 col-md-6">
            <a asp-controller="Transaction" asp-action="Index"
               class="card h-100 shadow-sm text-decoration-none text-dark d-flex flex-column align-items-center justify-content-center p-4">
                <img src="~/images/dashboard/transactions.svg" alt="Transactions Icon"
                     class="rounded-circle border border-success p-2 mb-3" style="width: 128px; height: 128px;">
                <h2 class="h4 font-weight-semibold mb-2">My Transactions</h2>
                <p class="text-muted text-center">Review your income and expenses.</p>
            </a>
        </div>
    </div>
</div>
