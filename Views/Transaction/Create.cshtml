@model YouFinanceIt.Models.Transaction

@{
    ViewData["Title"] = "Create Transaction";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="TransactionDate" class="control-label"></label>
        <input asp-for="TransactionDate" class="form-control" />
        <span asp-validation-for="TransactionDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AccountID" class="control-label"></label>
        <select asp-for="AccountID" class="form-control" asp-items="@(ViewData["AccountID"] as SelectList)">
            <option value="">-- Select Account --</option>
        </select>
        <span asp-validation-for="AccountID" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="CreatedDate" value="@DateTime.Now" />

    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
